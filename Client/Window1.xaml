<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="Chat.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Cuddy Chat Client"
	Width="393"
	Height="499"
	Closing="Window_Closing">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="0.0149892933618844*" />
			<RowDefinition
				Height="0.985010706638116*" />
		</Grid.RowDefinitions>
		<Label
			Content="Server IP:"
			Grid.Column="0"
			Grid.Row="1"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Margin="2.5,3.99999999999994,0,0"
			Width="83.5"
			Height="26" />
		<Label
			Content="Username:"
			Grid.Column="0"
			Grid.Row="1"
			HorizontalAlignment="Left"
			VerticalAlignment="Bottom"
			Margin="5,0,0,402"
			Width="75"
			Height="27.000000000000057" />
		<TextBox
			Name="txtIp"
			Grid.Column="0"
			Grid.Row="1"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Margin="87,8.99999999999994,0,0"
			Width="108"
			Height="21"
			Text="192.168.184.230" />
		<TextBox
			Name="txtUser"
			Grid.Column="0"
			Grid.Row="1"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Margin="89,38.9999999999999,0,0"
			Width="106"
			Height="19" />
		<Button
			Name="btnConnect"
			Grid.Column="0"
			Grid.Row="1"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Margin="0,30.9999999999999,38.5,0"
			Width="106"
			Height="28"
			Content="Connect"
			Click="btnConnect_Click" />
		<RichTextBox
			Name="txtLog"
			Grid.Column="0"
			Grid.Row="1"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Margin="16.5,91.9999999999999,0,0"
			Width="342"
			Height="300" 
			VerticalScrollBarVisibility="Visible"
		/>
		<TextBox
			Name="txtMessage"
			Grid.Column="0"
			Grid.Row="1"
			HorizontalAlignment="Left"
			VerticalAlignment="Bottom"
			Margin="17.5,0,0,20"
			Width="229"
			Height="29"
			KeyDown="txtMessage_KeyPress"
			AcceptsReturn="True"
		/>
		<Button
			Name="btnSend"
			Grid.Column="0"
			Grid.Row="1"
			HorizontalAlignment="Right"
			VerticalAlignment="Bottom"
			Margin="0,0,26.5,21"
			Width="92"
			Height="29"
			Content="Send"
			Click="btnSend_Click" />
	</Grid>
</Window>